<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contain"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:id="@+id/contain_layout"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog_calling"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Are you sure â€¨you want to finish this conversatoin"
            android:textColor="#A8AAAA"
            android:textSize="15sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="End Talk"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:id="@+id/bt_end"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_end_calling" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contain_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/tv_dismiss"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Tap to back conversation"/>

</RelativeLayout>